<Window x:Class="DeLightWPF.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VideoWindow" 
        Height="450" 
        Width="800" 
        Cursor="None" 
        Background="Black" 
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Focusable="False">
    <Grid x:Name="Container" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <!--In here the MediaElements will be contained-->
    </Grid>
</Window>
