    -->

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Background="White" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border Background="Green" Height="20" Width="20" />
                <Border Background="Yellow" Height="20" Width="20" />
                <Border Background="Red" Height="20" Width="20" />
            </StackPanel>
        </Border>



        <!-- Previewer / Settings window -->
        <Border Grid.Row="1" Margin="10,10,5,5" BorderBrush="#222" BorderThickness="5" Background="Black" Padding="50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <TextBlock Text="Preview" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel Grid.Row="1" Margin="0,15,0,0">
                    <TextBlock Text="Preview Scrubber" Foreground="White"/>
                    <Slider></Slider>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="50,0,0,0">
                    <TextBlock Text="Settings" Foreground="White" HorizontalAlignment="Center"/>
                    <Grid Margin="50,10">
                        <TextBlock Text="Fade In:" Foreground="White"/>
                        <TextBox Width="50" HorizontalAlignment="Right" Background="#444" Foreground="White" Text="3" />
                    </Grid>
                    <Grid Margin="50,10">
                        <TextBlock Text="Fade Out:" Foreground="White"/>
                        <TextBox Width="50" HorizontalAlignment="Right" Background="#444" Foreground="White" Text="3" />
                    </Grid>
                    <Grid Margin="50,10">
                        <TextBlock Text="Good:" Foreground="White"/>
                        <CheckBox Width="50" HorizontalAlignment="Right" Background="#444" Foreground="White" />
                    </Grid>
                    <Grid Margin="50,10">
                        <TextBlock Text="Very Bad:" Foreground="White"/>
                        <CheckBox Width="50" HorizontalAlignment="Right" Background="#444" Foreground="White" IsChecked="True"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>




        <!-- Cue List Window -->
        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Margin="5,10,10,10" BorderBrush="#222" BorderThickness="5" CornerRadius="5" Background="#444">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border BorderBrush="#000" BorderThickness="0" Background="#000" Margin="5" Padding="5" CornerRadius="5,5,0,0">
                    <TextBlock Margin="2" Foreground="White" HorizontalAlignment="Center"> Cue List</TextBlock>
                </Border>
                <Border BorderBrush="#222" BorderThickness="0" Margin="5" Background="#000" VerticalAlignment="Stretch" Grid.Row="1">
                    <StackPanel>
                        <Grid Background="#222">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border BorderBrush="White" BorderThickness="0,0,1,1" Grid.Column="0">
                                <TextBlock Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left"> Cue #</TextBlock>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="0,0,0,1" Grid.Column="1">
                                <TextBlock Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left"> Note</TextBlock>
                            </Border>
                            <Border BorderBrush="White" BorderThickness="1,0,0,01" Grid.Column="2">
                                <TextBlock Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left"> Type</TextBlock>
                            </Border>
                        </Grid>
                        <ListBox AlternationCount="2" Grid.Row="1" Background="#000" BorderBrush="#222" ItemsSource="{Binding Show.Cues}" HorizontalAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid x:Name="CueListBox" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="10*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" BorderBrush="White" BorderThickness="0,0,1,0">
                                            <TextBlock Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left" Text="{Binding Number}" FontSize="14" />
                                        </Border>
                                        <TextBlock Grid.Column="1" Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left" Text="{Binding Note}" FontSize="14" />
                                        <Border Grid.Column="2" BorderBrush="White" BorderThickness="1,0,0,0">
                                            <TextBlock Margin="5,2,5,4" Foreground="White" HorizontalAlignment="Left" Text="{Binding Type}" FontSize="14" />
                                        </Border>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                            <Setter Property="Background" Value="#000" TargetName="CueListBox"/>
                                        </Trigger>
                                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#222" TargetName="CueListBox"/>
                                        </Trigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>


        <!-- Overall Controls -->
        <Border Grid.Row="2" Margin="10,5,5,10" BorderBrush="#222" BorderThickness="5">
            <Grid  Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Master Controls" Grid.Column="0" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center" Grid.ColumnSpan="6"/>
                <!-- Play/Pause/Stop/Seek Slider/Time Passed/TotalTime -->
                <Slider Grid.Column="0" Margin="5,5,5,5" Grid.Row="1"/>
                <TextBlock Grid.Column="1" Margin="5,5,5,5" Text="00:00:00" Foreground="Wheat" Grid.Row="1"/>
                <TextBlock Grid.Column="2" Margin="5,5,5,5" Text=" / 00:00:00" Foreground="White" Grid.Row="1"/>
                <Button Grid.Column="3" Content="Play" Margin="5,5,5,5" Grid.Row="1"/>
                <Button Grid.Column="4" Content="Pause" Margin="5,5,5,5" Grid.Row="1"/>
                <Button Grid.Column="5" Content="Stop" Margin="5,5,5,5" Grid.Row="1"/>
            </Grid>
        </Border>

        <!-- Timeline Window -->
        <Border Grid.Row="3" Margin="10,5,5,10" BorderBrush="#222" BorderThickness="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="1" Grid.Row="0" Margin="5,5,5,5" BorderBrush="White" BorderThickness="1">
                    <TextBlock Text="Timeline Numbers Yada Yada Yada |0 |1 |2 |3" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" BorderBrush="White" BorderThickness="1">
                    <TextBlock Text="Video/Image Track" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" BorderBrush="White" BorderThickness="1">
                    <TextBlock Text="Lighting Track" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" BorderBrush="White" BorderThickness="1">
                    <TextBlock Text="Timeline Numbers Yada Yada Yada |0 |1 |2 |3" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" BorderBrush="White" BorderThickness="1">
                    <TextBlock Text="Timeline Numbers Yada Yada Yada |0 |1 |2 |3" Margin="5,5,5,5" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
